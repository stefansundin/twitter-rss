{
  "name": "Twitter RSS",
  "description": "Twitter to RSS service using Cassandra",
  "repository": "https://github.com/stefansundin/twitter-rss",
  "website": "https://github.com/stefansundin/twitter-rss",
  "logo": "https://stefansundin.github.io/twitter-rss/img/icon128.png",
  "success_url": "/",
  "addons": ["rediscloud:25", "redismonitor:free", "newrelic:stark", "papertrail:choklad", "loaderio:basic", "librato:development"],
  "keywords": ["twitter", "cassandra"],
  "env": {
    "RACK_ENV": "production",
    "CASSANDRA_HOSTS": {
      "description": "Comma separated list of Cassandra hosts"
    },
    "CASSANDRA_USERNAME": {
      "description": "Cassandra username"
    },
    "CASSANDRA_PASSWORD": {
      "description": "Cassandra password"
    },
    "CASSANDRA_KEYSPACE": {
      "description": "Cassandra keyspace",
      "value": "twitter"
    },
    "TWITTER_CONSUMER_KEY": {
      "description": "Twitter Consumer Key"
    },
    "TWITTER_CONSUMER_SECRET": {
      "description": "Twitter Consumer Secret"
    },
    "TWITTER_ACCESS_TOKEN_KEY": {
      "description": "Twitter Access Token Key"
    },
    "TWITTER_ACCESS_TOKEN_SECRET": {
      "description": "Twitter Access Token Secret"
    }
  }
}
