<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>https://twitter.com/<%= @username %></id>
  <title>@<%= @username %></title>
  <icon>https://twitter.com/favicon.ico</icon>
  <link href="https://twitter.com/<%= @username %>" />
  <link href="https://twittrss.herokuapp.com/<%= "#{@user_id}#@#{@username}" %>" rel="self" />
  <updated><%= @tweets[0]["date"] if @tweets[0] %></updated>
<%- @tweets.each do |tweet| -%>

  <entry>
    <id>https://twitter.com/<%= @username %>/status/<%= tweet["id"] %></id>
    <link href="https://twitter.com/<%= @username %>/status/<%= tweet["id"] %>" />
    <updated><%= tweet["date"] %></updated>
    <author><name><%= @username %></name></author>
    <title><%= @username %></title>
    <content type="html">
<%= tweet["message"] %>
    </content>
  </entry>
<%- end -%>
</feed>
